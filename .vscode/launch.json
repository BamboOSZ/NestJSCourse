{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug Nest Framework",
      "command": "npm run start:dev",
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "autoAttachChildProcesses": true,
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug Nest Framework (Windows)",
      "command": "SET DEBUG=* && npm run start:dev",
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "autoAttachChildProcesses": true,
    }
  ]
}
